{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "es6",
    "target": "es6",
    "lib": ["es6", "DOM"],
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
